# ========================================
# THE ROYAL BARBER APP - PRODUCTION ENVIRONMENT
# ========================================
# Production configuration for mobile app deployment

# ========================================
# API CONFIGURATION
# ========================================
# Production API URL
EXPO_PUBLIC_API_URL=https://api.theroyalbarber.com
#EXPO_PUBLIC_API_URL=http://localhost:3001

# ========================================
# APP CONFIGURATION
# ========================================
# App name and version
EXPO_PUBLIC_APP_NAME=The Royal Barber
EXPO_PUBLIC_APP_VERSION=1.3.0

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features for production
EXPO_PUBLIC_ENABLE_SMS_AUTH=true
EXPO_PUBLIC_ENABLE_PAYMENTS=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# ========================================
# DEBUG CONFIGURATION
# ========================================
# Disable debug mode in production
EXPO_PUBLIC_DEBUG_MODE=false

# ========================================
# ANALYTICS (OPTIONAL)
# ========================================
# Analytics configuration (uncomment if using analytics services)
# EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id

# ========================================
# PRODUCTION CHECKLIST
# ========================================
# ✅ EXPO_PUBLIC_API_URL points to production API
# ✅ EXPO_PUBLIC_DEBUG_MODE=false
# ✅ All feature flags are set appropriately
# ✅ App version is current
# ✅ No unnecessary Stripe keys (payments handled server-side)
